<div class="container">
  <div class="row" id='burgerimage'>
    <img class="center-block"src="https://img.clipartfest.com/2913076584b0a2cc782d33669783dc04_hamburger-sandwich-ten-mission-clipart-transparent-background_2400-2132.png" style="max-height: 200px; width: 200px">
  </div>
  <div class="col-xs-12 text-center" id="appTitle">
    <h2>Eat-Da-Burger</h2>
  </div>
</div>
<br>
<div class="container">
  <div class="row">
    <div class="col-xs-12 text-center enter_section">
      <p>Enter a burger you want to eat Click the "Submit" button</p>
    <br>
      <form action="/burgers/create" method="POST">
        <input type="text" name="burger_name" value="" id="enter_text">
        <button type="submit" class="btn btn-primary">Submit</button>     
      </form>
    </div>
  </div>
</div>
<br>
<div class="container">
  <div class="col-xs-6 text-center" class="task">
    <div class="row">
      {{#each burgers}}
        {{#unless this.devoured}}
        <div class="col-xs-9 text-center">
          <pre>{{this.id}}. {{this.burger_name}}</pre>
        </div>
        <div class="col-xs-3 text-center">
          <form method="POST" action="/burgers/update?_method=PUT">
            <input type="hidden" type="text" name="burger_id" value={{this.id}}>
            <button type="submit"class="btn btn-default">Devour!</button>
          </form>
        </div>
        {{/unless}}
      {{/each}}
    </div>
  </div>
  <div class="col-xs-6 text-center" class="task">
    {{#each burgers}}
      {{#if this.devoured}}
        <pre>{{this.id}}. {{this.burger_name}}</pre>
      {{/if}}
    {{/each}}
  </div>
</div>